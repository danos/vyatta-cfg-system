module vyatta-system-storage-v1 {
    namespace "urn:vyatta.com:mgmt:vyatta-system-storage:1";
    prefix vyatta-system-storage-v1;

    import vyatta-system-v1 {
        prefix system;
    }
    import configd-v1 {
        prefix configd;
    }

